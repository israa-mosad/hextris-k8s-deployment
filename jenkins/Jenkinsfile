pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    command:
    - cat
    tty: true
"""
        }
    }
    stages {
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t israa/hextris:latest .'
            }
        }
        stage('Deploy with Helm') {
            steps {
                sh 'helm upgrade --install hextris ./helm-chart --namespace hextris --create-namespace'
            }
        }
    }
}
