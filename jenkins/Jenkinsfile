pipeline {
    agent {
        kubernetes {
            label 'hextris-agent'
            defaultContainer 'kubectl'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kubectl
    image: lachlanevenson/k8s-kubectl:latest
    command:
    - cat
    tty: true
"""
        }
    }

    stages {
        stage('Deploy with Helm') {
            steps {
                sh 'helm upgrade --install hextris ./helm-chart --namespace hextris --create-namespace'
            }
        }
    }
}
