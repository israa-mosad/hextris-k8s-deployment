pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kubectl
    image: israa2000/jenkins-agent-kubectl-helm:latest
    command:
    - cat
    tty: true
"""
            defaultContainer 'kubectl'
        }
    }
    stages {
        stage('Deploy with Helm') {
            steps {
                container('kubectl') {
                    sh 'helm upgrade --install hextris ./helm-chart --namespace hextris --create-namespace'
                }
            }
        }
    }
}
